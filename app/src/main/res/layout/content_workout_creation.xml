<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_workout_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hst.andrew.hstworkout.WorkoutCreation"
    tools:showIn="@layout/activity_workout_creation">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView"
        android:id="@+id/txtWorkoutName"
        android:textAllCaps="false" />

    <TextView
        android:text="@string/WorkOutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/WorkOutName"
        android:layout_above="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtex2"
        android:layout_below="@+id/txtex1"
        android:layout_alignStart="@+id/txtex1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtex3"
        android:layout_below="@+id/txtex2"
        android:layout_alignStart="@+id/txtex2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtex3"
        android:layout_alignEnd="@+id/txtex3"
        android:id="@+id/txtex4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtex5"
        android:layout_alignStart="@+id/txtex5"
        android:id="@+id/txtex6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtex5"
        android:layout_below="@+id/txtex4"
        android:layout_alignStart="@+id/txtex4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtex6"
        android:layout_alignEnd="@+id/txtex6"
        android:id="@+id/txtex7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtex7"
        android:layout_alignEnd="@+id/txtex7"
        android:id="@+id/txtex8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtex8"
        android:layout_alignStart="@+id/txtex8"
        android:id="@+id/txtex9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtex1"
        android:layout_below="@+id/txtWorkoutName"
        android:layout_alignStart="@+id/txtWorkoutName"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="@string/Excercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/txtex1"
        android:layout_above="@+id/txtex2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtex2" />

    <Button
        android:text="@string/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtex8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/btnNext" />

</RelativeLayout>
